{
  "language": "sk",
  "intents": {
    "HassTurnOff": {
      "data": [
        {
          "sentences": [
            "<turn_off> <name>"
          ]
        },
        {
          "sentences": [
            "<close> {name}"
          ],
          "response": "cover"
        },
        {
          "sentences": [
            "<close> {name} [v | vo | na | pred | za | pod | pred] {area}"
          ],
          "response": "cover_area"
        },
        {
          "sentences": [
            "<close> garáž",
            "<close> garážovú bránu"
          ],
          "response": "cover",
          "slots": {
            "device_class": "garage",
            "domain": "cover"
          }
        },
        {
          "sentences": [
            "<close> (rolety | žalúzie | záves[y] | záclon(u|y)) [v | na] {area}"
          ],
          "response": "cover_area",
          "slots": {
            "device_class": [
              "blind",
              "curtain",
              "shutter"
            ],
            "domain": "cover"
          }
        },
        {
          "sentences": [
            "(<turn_off> | <turn_off_light>) [(všetky | všetko)] [(svetlo | svetlá | osvetlenie | lampu | lampy)] [(v | vo | na | pred | pod | pri)] <area>"
          ],
          "slots": {
            "domain": "light"
          }
        }
      ]
    },
    "HassTurnOn": {
      "data": [
        {
          "sentences": [
            "(<turn_on> | <turn_on_light>) [(všetky | všetko)] [(svetlo | svetlá | osvetlenie | lampu | lampy)] [(v | vo | na | pred | pod | pri)] <area>"
          ],
          "slots": {
            "domain": "light"
          }
        },
        {
          "sentences": [
            "<turn_on> <name>"
          ]
        },
        {
          "sentences": [
            "<open> {name}"
          ],
          "response": "cover"
        },
        {
          "sentences": [
            "<open> {name} [v | vo | na | pred | za | pod | pred] {area}"
          ],
          "response": "cover_area"
        },
        {
          "sentences": [
            "<open> garáž",
            "<open> garážovú bránu"
          ],
          "response": "cover",
          "slots": {
            "device_class": "garage",
            "domain": "cover"
          }
        },
        {
          "sentences": [
            "<open> (rolety | žalúzie | záves[y] | záclon(u|y)) [v | na] {area}"
          ],
          "response": "cover_area",
          "slots": {
            "device_class": [
              "blind",
              "curtain",
              "shutter"
            ],
            "domain": "cover"
          }
        }
      ]
    }
  },
  "responses": {
    "errors": {
      "no_intent": "Prepáč, nerozumel som tomu",
      "no_area": "Žiadna oblasť s názvom {{ area }}",
      "no_domain": "{{ area }} neobsahuje {{ domain }}",
      "no_device_class": "{{ area }} neobsahuje {{ device_class }}",
      "no_entity": "Žiadne zariadenie alebo entita s názvom {{ entity }}",
      "handle_error": "Pri spracovaní došlo k neočakávanej chybe"
    },
    "intents": {
      "HassTurnOff": {
        "default": "Turned off {{ slots.name }}",
