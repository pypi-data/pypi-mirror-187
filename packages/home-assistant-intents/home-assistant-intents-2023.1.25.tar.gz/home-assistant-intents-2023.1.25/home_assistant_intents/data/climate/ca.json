{
  "language": "ca",
  "intents": {
    "HassClimateSetTemperature": {
      "data": [
        {
          "sentences": [
            "(posa | puja) [la] <temp> a <graus> [<area>]",
            "(posa | puja) [la] calefacció a <graus> [<area>]"
          ]
        }
      ]
    },
    "HassClimateGetTemperature": {
      "data": [
        {
          "sentences": [
            "quina <temp> fa",
            "quina és la <temp>",
            "quina és la <temp> <area>",
            "quanta calor fa <area>"
          ]
        }
      ]
    }
  },
  "responses": {
    "intents": {
      "HassClimateSetTemperature": {
        "default": "Temperatura ajustada a {{ slots.temperature }} graus"
      },
      "HassClimateGetTemperature": {
        "default": "{{ state.state | float | abs | round(2) }} {{ 'grau' if state.state | float | abs == 1 else 'graus' }} {{ 'sota zero' if state.state | float < 0 else '' }}"
      }
    }
  }
}