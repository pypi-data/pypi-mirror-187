#: import gch kivy.utils.get_color_from_hex


<NodeScreen>

    ScrollView:

        MDList:
            spacing: dp(10)

            NodeBox:


<start_node_server_Box>
    adaptive_height: True
    height:"120dp"
    padding: dp(24)



    MDGridLayout:
        adaptive_height: True


        cols: 2

        MDTextField:

            size_hint_x: .5
            hint_text: "IP: "
            mode: "fill"
        MDTextField:

            size_hint_x: .5
            hint_text: "PORT: "
            mode: "fill"

<add_unl_node_Box>
    adaptive_height: True
    height:"120dp"
    padding: dp(24)



    MDGridLayout:
        adaptive_height: True


        cols: 2

        MDTextField:

            size_hint_x: .5
            hint_text: "Public Key: "
            mode: "fill"


<NodeBox>
    adaptive_height: True


    canvas.before:

        Rectangle:
            size: self.size
            pos: self.pos

    MDGridLayout:
        padding: dp(10)
        size_hint_x: 1
        size_hint_y: None
        height: self.minimum_height
        spacing: 20
        cols: 2

        AnchorLayout:
            size_hint_y: None
            height: but1.height
            MDRoundFlatIconButton:
                id: but1
                icon: "server-network"
                on_press: root.start_node_server()
                width:240
                text: "Start Node Server"
                halign: "right"
                font_style: "Button"


        AnchorLayout:
            size_hint_y: None
            height: but2.height
            MDRoundFlatIconButton:
                id: but2
                icon: "server-network-off"
                on_press: root.stop_node_server()
                width:240
                text: "Stop Node Server"
                halign: "right"
                font_style: "Button"


        AnchorLayout:
            size_hint_y: None
            height: but3.height
            MDRoundFlatIconButton:
                id: but3
                icon: "lan-connect"
                on_press: root.connect_to_know_node()
                width:240
                text: "Connect to known nodes"
                halign: "right"
                font_style: "Button"


        AnchorLayout:
            size_hint_y: None
            height: but4.height
            MDRoundFlatIconButton:
                id: but4
                icon: "server-plus"
                on_press: root.connect_a_node()
                width:240
                text: "Connect to a node"
                halign: "right"
                font_style: "Button"



        AnchorLayout:
            size_hint_y: None
            height: but5.height
            MDRoundFlatIconButton:
                id: but5
                icon: "security-network"
                on_press: root.add_unl_node()
                width:240
                text: "Add UNL node"
                halign: "right"
                font_style: "Button"



        AnchorLayout:
            size_hint_y: None
            height: but6.height
            MDRoundFlatIconButton:
                id: but6
                icon: "semantic-web"
                on_press: root.get_block()
                width:240
                text: "Get the block from other unl nodes"
                halign: "right"
                font_style: "Button"


        AnchorLayout:
            size_hint_y: None
            height: but7.height
            MDRoundFlatIconButton:
                id: but7
                icon: "content-copy"
                on_press: root.nd_id()
                width:240
                text: "Copy the your ID"
                halign: "right"
                font_style: "Button"

        AnchorLayout:
            size_hint_y: None
            height: but8.height
            MDRoundFlatIconButton:
                id: but8
                icon: "qrcode"
                on_press: root.nd_id_qr()
                text: "QR Code of your ID"
                halign: "right"
                font_style: "Button"

        AnchorLayout:
            size_hint_y: None
            height: but9.height
            MDRoundFlatIconButton:
                id: but9
                icon: "lifebuoy"
                on_press: root.status()
                width:240
                text: "Status"
                halign: "right"
                font_style: "Button"
