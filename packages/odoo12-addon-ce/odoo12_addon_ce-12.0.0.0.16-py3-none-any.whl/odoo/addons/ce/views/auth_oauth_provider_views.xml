<?xml version="1.0"?>
<odoo>
  <record id="view_oauth_provider_form_ce_inherited" model="ir.ui.view">
    <field name="name">auth.oauth.provider.form.ce.inherited</field>
    <field name="model">auth.oauth.provider</field>
    <field name="inherit_id" ref="auth_oauth.view_oauth_provider_form" />
    <field name="arch" type="xml">
      <xpath expr="//field[@name='name']" position="after">
        <field name="login_provider"/>
        <field name="company_id" />
      </xpath>
    </field>
  </record>

  <record id="view_oauth_provider_tree_ce_inherited" model="ir.ui.view">
    <field name="name">auth.oauth.provider.tree.ce.inherited</field>
    <field name="model">auth.oauth.provider</field>
    <field name="inherit_id" ref="auth_oauth.view_oauth_provider_tree" />
    <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="company_id" />
            </field>
    </field>
  </record>

  <template id="providers" inherit_id="auth_oauth.providers" name="OAuth Providers">
      <xpath expr="//div[hasclass('o_auth_oauth_providers')]" position="replace">
          <div class="o_auth_oauth_providers list-group mt-1 mb-1 text-left">
              <a t-foreach="providers" t-as="p" t-if="p['login_provider']" class="list-group-item list-group-item-action py-2" t-att-href="p['auth_link']">
                  <i t-att-class="p['css_class']"/>
                  <t t-esc="p['body']"/>
              </a>
          </div>
      </xpath>
  </template>

  <record model="ir.ui.menu" id="auth_oauth.menu_oauth_providers">
    <field name="groups_id" eval="[(6,0,[ref('group_platform_admin')])]"/>
  </record>

</odoo>
