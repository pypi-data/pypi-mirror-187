    "del_favorite": {
      "url": "https://manga.bilibili.com/twirp/bookshelf.v1.Bookshelf/DeleteFavorite?device=pc&platform=web",
      "method": "POST",
      "verify": true,
      "params": {
        "comic_ids": "int: 漫画 id"
      },
      "comment": "取消追漫"
